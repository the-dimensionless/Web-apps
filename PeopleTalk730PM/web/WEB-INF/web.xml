<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlets.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPhoto</servlet-name>
        <servlet-class>servlets.GetPhoto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePhoto</servlet-name>
        <servlet-class>servlets.ChangePhoto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TalkPro</servlet-name>
        <servlet-class>servlets.TalkPro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadFile</servlet-name>
        <servlet-class>servlets.DownloadFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPhoto</servlet-name>
        <url-pattern>/GetPhoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePhoto</servlet-name>
        <url-pattern>/ChangePhoto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TalkPro</servlet-name>
        <url-pattern>/TalkPro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadFile</servlet-name>
        <url-pattern>/DownloadFile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
